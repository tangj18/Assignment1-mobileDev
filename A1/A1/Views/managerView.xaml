<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A1.Views.managerView"
             Title="Manager View">
    <ContentPage.Content>
        <StackLayout Padding="140, 0" VerticalOptions="Center">
            <Button Text="History" 
                    BackgroundColor="Pink" 
                    FontSize="25"
                    FontAttributes="bold"
                    Clicked="historyPage"></Button>
            <Button Text="Restock"
                    BackgroundColor="Pink"
                    FontSize="25"
                    FontAttributes="bold"
                    Clicked="restockPage"></Button>
            <Button Text="Add New Product"
                    BackgroundColor="Pink"
                    FontSize="25"
                    FontAttributes="bold"
                    Clicked="addItemPage"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>